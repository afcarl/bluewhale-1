md-dialog.container-dialog(aria-label="Add Tag")
  md-toolbar(layout="column" layout-align="center center")
    md-subheader.md-sticky-no-effect
      span.action Tag 
      | Image 
      span.short-id {{ imageShortId }}
  md-content
    md-list
      md-item
        md-input-container(flex)
          label Repo
          input(ng-model="queryParams.repo")
      md-item
        md-input-container(flex)
          label Tag
          input(ng-model="queryParams.tag")
      md-item
        div Force:
        md-checkbox(ng-model="queryParams.force" aria-label="Force")
      md-item
        p {{ content }}

  div(class="md-actions" layout="row")
    md-button(ng-click="cancel()") Cancel
    md-button(ng-click="ok()" class="md-primary") Yes

