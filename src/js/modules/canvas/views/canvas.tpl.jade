div(layout="column" layout-fill class="images canvas" ng-controller="CanvasCtrl" flex)
  md-toolbar(layout="column" md-theme="none" flex style="max-height: 64px;")
    md-list(md-theme="blue" role="list")
      md-item
        md-button(ng-click="addNode()" aria-label="Add Component")
          md-tooltip Add Component
          div.icon.svg-ic_add_24px
      md-item
        md-button(aria-label="Remove Component")
          md-tooltip Remove Component
          div.icon.svg-ic_clear_24px

  md-content(layout="column" style="margin-top: 16px;" flex)
    svg(width="100%" height="100%" xmlns="http://www.w3.org/2000/svg")
